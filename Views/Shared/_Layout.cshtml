<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComicsBox</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body id="body" class="theme-dark d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-sm navbar-modern mb-3">
            <div class="container-fluid d-flex align-items-center justify-content-between">

                <!-- LEFT: Home + Back -->
                <div class="d-flex align-items-center">
                    <!-- Home -->
                    <button class="header-btn me-2" type="button" onclick="location.href='@Url.Action("Index","Home")'" title="Accueil">
                        🏠
                    </button>

                    <!-- Back (n'affiche pas sur Home) -->
                    @if (ViewData["ShowBackButton"] as bool? ?? false)
                    {
                        <button class="header-btn" type="button" onclick="location.href='@ViewData["BackUrl"]'" title="Retour">
                            ◀️
                        </button>
                    }
                </div>

                <!-- RIGHT: Search + Theme -->
                <div class="d-flex align-items-center">
                    <!-- Search form -->
                    <form class="d-flex align-items-center me-2" method="get" action="@Url.Action("Search", "Comics")">
                        <input class="form-control me-2" type="search" name="query" placeholder="Rechercher des séries..." aria-label="Search">
                        <button class="header-btn" type="submit">🔍</button>
                    </form>

                    <!-- Theme toggle -->
                    <button id="theme-toggle" class="header-btn" type="button">🌙</button>
                </div>

            </div>
        </nav>
    </header>

    <main role="main" class="flex-fill container pb-3">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- THEME TOGGLE -->
    <script>
        (function(){
            const body = document.getElementById('body');
            const toggle = document.getElementById('theme-toggle');

            // Vérifie le theme dans localStorage
            const stored = localStorage.getItem('theme');
            if(stored) {
                body.className = stored + ' d-flex flex-column min-vh-100';
                toggle.textContent = stored === 'theme-dark' ? '☀️' : '🌙';
            }

            toggle.addEventListener('click', () => {
                if(body.classList.contains('theme-dark')){
                    body.classList.remove('theme-dark');
                    body.classList.add('theme-light');
                    localStorage.setItem('theme','theme-light');
                    toggle.textContent = '🌙';
                } else {
                    body.classList.remove('theme-light');
                    body.classList.add('theme-dark');
                    localStorage.setItem('theme','theme-dark');
                    toggle.textContent = '☀️';
                }
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
